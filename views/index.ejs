<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Media Vibe</title>
    <!-- Add Bootstrap CDN link -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous" />
    <link
      href="https://fonts.googleapis.com/css2?family=Karla:wght@500&family=Montserrat:wght@500&display=swap"
      rel="stylesheet" />
    <style type="text/css" media="screen">
      body {
        font-family: "Karla";
        background-color: #f8f9fa;
      }

      :root {
        --text: #dfe1fd;
        --background: #010411;
        --primary: #848cf9;
        --secondary: #9e1707;
        --accent: #f5e52e;
      }

      body,
      nav {
        background-color: var(--background);
      }

      .nav-brand {
        font-family: "Montserrat" !important;
      }

      .video-container {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 aspect ratio */
        box-shadow: 0 4px 8px rgba(255, 255, 255, 0.4); /* Add box shadow */
      }

      .video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }

      input,
      textarea {
        background-color: var(--light) !important;
        color: var(--dark) !important;
        border: 2px solid var(--secondary) !important;
      }

      .video-thumbnail {
        width: 100%;
        border-radius: 12px 12px 0 0;
      }

      .card {
        border: none;
        background-color: var(--primary);
        border-radius: 12px;
        margin-bottom: 20px;
      }

      .card-body {
        color: var(--text);
      }

      .btn-primary {
        background-color: var(--accent);
        border: solid var(--accent);
        color: #11181a;
      }
      .card-columns {
        column-count: 2;
      }

      @media (max-width: 767px) {
        .card-columns {
          column-count: 1;
        }
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <%- include("navbar") %>

    <div class="p-3 container">
      <div class="card-columns">
        <!-- Sample video cards -->
        <% data.sort(() => Math.random() - 0.5).slice(0, 20).forEach((entry) =>
        { %>
        <div class="card">
          <video controls class="video-thumbnail" alt="<%= entry.nama %>">
            <source src="<%= entry.vidLink %>" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
          <div class="card-body">
            <h4 class="card-title"><%= entry.nama %></h4>
            <p class="card-text"><%= entry.desc %></p>
          </div>
          <div class="card-footer">
            <a class="btn btn-primary" href="/<%= entry.id %>">Lihat Details</a>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"></script>
  </body>
</html>
